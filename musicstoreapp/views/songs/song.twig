{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
	 <div class="row">
		<div class="media col-xs-10">
		  <div class="media-left media-middle">
			<img class="media-object" src="/covers/{{ song._id }}.png" >
		  </div>
		  <div class="media-body">
			 <h2>{{song.title}}</h2>
			 <p>{{song.author}}</p>
			 <p>{{song.kind}}</p>
			  {% if available %}
			  	<a class="btn btn-primary pull-right"
				 href="/songs/buy/{{ song._id }}">{{ song.price }} € - {{ song.usd }} $</a>
			  {% else %}
			 	<!-- Cambiar el precio por "reproducir" si ya está comprada -->
				  <audio controls>
					  <source src="/audios/{{ song._id }}.mp3" type="audio/mpeg">
				  </audio>
			  {% endif %}
		  </div>
		</div>
	  </div>
	<br>
	<br>

	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
			<tr>
				<th>Autor</th>
				<th>Texto</th>
				<th>Id de la canción</th>
				<th class="col-md-1"></th>
			</tr>
			</thead>
			<tbody>
			{% for comment in commentList %}
				<tr>
					<td>{{ comment.author }}</td>
					<td>{{ comment.text }}</td>
					<td>{{ comment.song_id }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

	<br>
	<br>
	<!-- Comentarios -->
	<form class="row" method="post" action="/comments/{{ song._id }}" enctype="multipart/form-data">
		<div class="form-group" hidden>
			<label class="control-label col-sm-2" for="song_id">Id de la canción:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="song_id" name="song_id" placeholder="Id de la canción"
					   required value="{{ song._id }}" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="text">Texto:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="text" name="text" placeholder="Texto del comentario"
					   required/>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Agregar</button>
			</div>
		</div>
	</form>

